{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/app/*": ["app/*"],
      "@/sass/*": ["sass/*"]
    },
    "strict": true,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
